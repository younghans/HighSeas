{
  "rules": {
    "players": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "!newData.hasChild('gold') || newData.child('gold').val() === data.child('gold').val()",
        "gold": {
          ".read": "auth != null",
          ".write": false
        }
      }
    },
    "shipwrecks": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "enemyShips": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
} 